<div class="card">
    <br/>
  <div class="card-divider">
    <h4>Employee  Profile</h4>
  </div>
  <div class="card-section">
    
    <p>
    <strong>Name:</strong>
    <%= @employeedetail.firstname+" "+@employeedetail.lastname %>
</p>
<p>
    <strong>Gender:</strong>
    <%= @employeedetail.gender %>
</p>
<p>
    <strong>Date of Birth:</strong>
    <%= @employeedetail.dob %>
</p>
<p>
    <strong>Email:</strong>
    <%= @employeedetail.emal %>
</p>
<p>
    <strong>Contact:</strong>
    <%= @employeedetail.contact %>
</p>
<p>
    <strong>About:</strong>
    <%= @employeedetail.about %>
</p>
<p>
    <strong>Location:</strong>
    <%= @employeedetail.location %>
</p>
<p>
    <strong>Skills:</strong>
    <%= @employeedetail.skills %>
</p>
<p>
    <strong>Country:</strong>
    <%= @employeedetail.country %>
</p>
<p>
    <strong>Current Position:</strong>
    <%= @employeedetail.currentposition %>
</p>

  </div>
</div>
<%= link_to 'Delete', @employeedetail, class:"button secondary", data: { confirm: 'Are you sure?' } ,:method => :delete%>

<div class="card">
        <br/>
    <div class="card-divider">
        <h4>Experience</h4>
      </div>
<% @employeedetail.experiences.each do |experience|%>

    <div class="card-section">
    <p><%= experience.title%> </p>
    <p><%= experience.jobtype%> </p>
    <p><%= experience.company%> </p>
    <p><%= experience.joblocation%> </p>
    <p><%= experience.startdate%> </p>
    <p><%= experience.enddate%> </p>

</div>

<%end%>
</div>

<%= form_for([@employeedetail, @employeedetail.experiences.build]) do |f|%>
    <div class="card">
        <br/>
    <div class="card-divider">
        <h4>Experience Details</h4>
      </div>
    <div class="card-section">
        <div class= "grid-container"> 
                <div class="grid-x grid-padding-x">
                    <div class="medium-6 cell">
                    <label>Title
                    <%= f.text_field :title %>
                    </label>
                    </div>
                    <div class="medium-6 cell"> 
                    <label>Type
                    <%= f.text_field :jobtype %>
                    </label>
                    </div>
        </div>
        </div>
        <div class= "grid-container"> 
                <div class="grid-x grid-padding-x">
                    <div class="medium-6 cell">
                    <label>Company
                    <%= f.text_field :company %>
                    </label>
                    </div>
                    <div class="medium-6 cell"> 
                    <label>Job Location
                    <%= f.text_field :joblocation %>
                    </label>
                    </div>
        </div>
        </div>
        <div class= "grid-container"> 
                <div class="grid-x grid-padding-x">
                    <div class="medium-6 cell">
                    <label>Start Date
                    <%= f.text_field :startdate %>
                    </label>
                    </div>
                    <div class="medium-6 cell"> 
                    <label>End Date
                    <%= f.text_field :enddate %>
                    </label>
                    </div>
        </div>
        </div>
        <div class='grid-container'>
         <%= f.submit "Add Experience", class:"button" %>
    </div>
    </div>
    <%end%>


